{
  "name": "ifiles",
  "version": "1.0.0",
  "description": "A simple database of connections",
  "main": "server.js",
  "scripts": {
    "dev": "wzrd app/app.js | wtch | garnish",
    "start": "node server",
    "test": "tap test",
    "build": "browserify -t brfs app/app.js | uglifyjs -c > public/bundle.js",
    "gzip": "cat public/bundle.js | gzip > public/bundle.js.gz"

  },
  "keywords": [
    "pocket",
    "crm"
  ],
  "author": "Tom",
  "license": "MIT",
  "dependencies": {
    "ecstatic": "^0.5.8",
    "es3ify": "^0.1.3",
    "hyperscript": "^1.4.4",
    "insert-css": "^0.2.0",
    "page": "^1.6.0",
    "page-body-parser": "^1.0.0",
    "pouchdb": "^3.3.0",
    "vbridge": "0.0.1",
    "vflow-pouchdb": "^1.0.2"
  },
  "devDependencies": {
    "brfs": "^1.3.0",
    "garnish": "^1.0.5",
    "wtch": "^1.1.1",
    "wzrd": "^1.2.1"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "env": {
    "ecstatic": {
      "root": "public",
      "gzip": true,
      "handleError": false,
      "showDir": false
    }
  }
}
